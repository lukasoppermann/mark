// "maxstatements" should be enabled once there is a workaround for the IIFE
{
    "node": true,
    "browser": true,
    "esnext": true,
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "immed": true,
    "indent": 2,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "quotmark": "single",
    "regexp": true,
    "maxdepth": 3,
    "maxparams": 3,
    "maxstatements": 9,
    "maxcomplexity": 10,
    "undef": true,
    "unused": true,
    "strict": false,
    "trailing": true,
    "smarttabs": true,
    "loopfunc": true,
    "globals": {
        "define": true,
        "CodeMirror": true
    }
}

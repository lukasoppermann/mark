# ---------------------------------------------------------
# Display the name of the home directory
# ---------------------------------------------------------
windowTitle = "$TM_DISPLAYNAME - ${CWD/^.*\///}"
# ---------------------------------------------------------
# Set project directory
# ---------------------------------------------------------
projectDirectory     = "$CWD"
# ---------------------------------------------------------
# exclude directories
# ---------------------------------------------------------
myExcludes = "{log,logs,_dev,_cache,cache,_backup,images,layout,files,movies}"
excludeDirectories = "{$excludeDirectories,$myExcludes}"
# ---------------------------------------------------------
# Variables
# ---------------------------------------------------------
TM_FULLNAME = "Lukas Oppermann"
TM_ORGANIZATION = "vea.re"
TM_GIT = "/usr/local/bin/git"
# ---------------------------------------------------------
# General settings
# ---------------------------------------------------------
tabSize = 2
softTabs = false
softWrap = false
showInvisibles = true
spellChecking = true
# ---------------------------------------------------------
# General settings by type
# ---------------------------------------------------------
[ text ]
softWrap = false
wrapColumn = 80
softTabs = true
[ text.html.markdown ]
softWrap = true
wrapColumn = "Use Window Frame"
[ text.plain ]
softWrap = true
wrapColumn = "Use Window Frame"
[ source ]
softWrap = false
wrapColumn = 80
softTabs = true
[ source.plist ]
softTabs = false
[ source.tm-properties ]
spellChecking = false
[ source.css ]
spellChecking = false
softWrap = true
wrapColumn = "Use Window Frame"
[ source.js ]
spellChecking = false
softWrap = true
wrapColumn = "Use Window Frame"